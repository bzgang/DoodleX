<script>
    var mycom = Vue.component('button-counter', {
        data: function () {
            return {
                InfoList: { category: "0", po: "", content: "", votes: 0, count: 0 }
            }
        },
        props: ["nums"],
        template: '#frameTr',
        methods: {
            delcom: function (nums) {
                var index = this.$parent.counter.findIndex(function (item) {
                    if (item.nums == nums) {
                        //  console.log(nums + "-=-=-=-=" + item.nums)
                        return true;
                    }
                })
                this.$parent.counter.splice(index, 1)

            }
        }
    })
    var app = new Vue({
        el: "#editForm",
        data: {
            trNums: 0,
            counter: [{ nums: 0 }],

        },
        methods: {
            addCounter: function () {
                this.trNums += 1
                // console.log(Date.now())
                this.counter.push({ nums: this.trNums })



            },
            SaveCounter: function (data) {
                var CostInfos = []
                console.log(this.$children.length);
                for (var i = 0; i < this.$children.length; i++) {
                    CostInfos.push(this.$children[i].InfoList)
                }
                console.log(CostInfos);
                var url = "/index/Save";
                var that = this
                var formData = new FormData();
                formData.append('obj', JSON.stringify(CostInfos));
                axios.post(url, formData,
                    {
                        headers:
                            { 'Content-Type': 'application/json; charset=UTF-8' }
                    })
                    .then(function (data) {
                        console.log(data)

                    }, function (error) {
                        console.log(error)
                    })

            }
        }
    })
</script>