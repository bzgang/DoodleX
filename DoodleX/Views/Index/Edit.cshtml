        <th style="width: 10%;"> <input type="text" style="width:100%" v-model="InfoList.count" /></th>
        <th style="width: 15%;">

            <a href="javascript:void(0)" v-on:click="delcom(nums)">
                <i class="icon-trash">删除</i>
            </a>
        </th>


    </tr>
